<!-- CSS files end -->

<!-- JavaScript files start -->
<script type="text/javascript" src="js/jquery.min.js"></script>
<script type="text/javascript" src="js/effects.jquery-ui.min.js"></script>
<script type="text/javascript" src="js/jquery.nivo-slider.min.js"></script>
<script type="text/javascript" src="js/jquery.colorbox.min.js"></script>
<script type="text/javascript" src="js/custom.js"></script>
<script type="text/javascript" src="js/signup.js"></script>
<!-- JavaScript files end -->
</head>
<body>
  <!-- website wrapper starts -->
<div class="websiteWrapper"> 
  
  <!-- main menu wrapper starts -->
  {{>menu_logged_out}}
  <!-- main menu wrapper ends --> 
  
  <!-- header wrapper starts -->
  <div class="headerOuterWrapper">
    <div class="headerWrapper"> <a href="" class="mainMenuButton"><span>Menu</span></a></div>
  </div>
  <!-- header wrapper ends -->
  <!-- page wrapper starts -->


  <div class="pageWrapper">
    {{>alertMessage}}
    <!-- <div class="container-fluid"> -->
      <!-- contact form wrapper starts -->
      <div class="contactFormWrapper">
        <h4 class="contactTitle">Create an Account</h4>
        <!-- contact form starts -->
        <form action="/signup" method="post" name = "myForm" class="contactForm" id="contactForm" onsubmit="return validateForm();">
          <fieldset>
            <!-- <div class="formFieldWrapper"> -->
              <!-- <label for="contactNameField">Email:</label> -->
              <input type="text" onfocus="if (this.value=='Email') this.value = ''" onblur="if (this.value=='') this.value = 'Email'" name="email" value="Email" class="contactField requiredField" id="contactEmailField" data-placeholder=""/>
            <!-- </div> -->
            <!-- <div class="formFieldWrapper"> -->
              <input type="password" placeholder="Password" name="password"  class="contactField requiredField requiredEmailField" id="contactEmailField" data-placeholder=""/>

              <input type="password" placeholder="Confirm Password" name="confirm_password" class="contactField requiredField requiredEmailField" id="contactEmailField" data-placeholder=""/>
            <!-- </div> -->
            <div class="formSubmitButtonErrorsWrapper"> 
              <!-- form errors start --> 
              <span class="formValidationError" id="contactNameFieldError">Your name is required.</span> <span class="formValidationError" id="contactEmailFieldError">Your email is required.</span> <span class="formValidationError" id="contactEmailFieldError2">Invalid email address.</span> 
              <!-- form errors end -->
              {{#if brand}} 
                <input type ="hidden" name="image" value={{image}}>
                <input type ="hidden" name="brand" value={{brand}}>
                <input type ="hidden" name="size" value={{size}}>
              {{/if}}
              <input type="submit" class="buttonWrapper contactSubmitButton" id="contactSubmitButton" value="Get Started" data-form-id="contactForm"/>
            </div>
            <input type="hidden" name="formIsReady" value="true"  id="formIsReady" />
          </fieldset>
        </form>
        <!-- contact form ends --> 
      </div>
      <!-- contact form wrapper ends --> 
  </div>
   <!-- page wrapper ends --> 
  
  <!-- footer wrapper starts -->
  <div class="footerWrapper landingFooterWrapper"> 
  </div>
  <!-- footer wrapper ends --> 
  
</div>
<!-- website wrapper ends -->
</body>
</html>
